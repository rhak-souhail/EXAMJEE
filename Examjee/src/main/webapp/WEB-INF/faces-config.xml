<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <managed-bean>
        <managed-bean-name>employeController</managed-bean-name>
        <managed-bean-class>com.example.jsf_jpa.controller.EmployeController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>projectController</managed-bean-name>
        <managed-bean-class>com.example.jsf_jpa.controller.ProjectController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <application>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <validator>
        <validator-id>valid</validator-id>
        <validator-class>com.example.jsf_jpa.ValidateEmail</validator-class>
    </validator>



</faces-config>